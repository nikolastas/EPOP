#!/usr/bin/env python3
import argparse
import requests
import json

def resetstations():
	
	url = 'https://192.168.1.2:9103/interoperability/api/admin/resetstations'
	response = requests.post(url, verify='../cert/CA/CA.pem')
	print(response.status_code)
	print(response.json())


parser = argparse.ArgumentParser(description= '[WARNING] This would reset the stations of our API')

args = parser.parse_args()

resetstations()